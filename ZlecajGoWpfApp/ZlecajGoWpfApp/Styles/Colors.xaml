<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush
        x:Key="AccentColorBrush1"
        Color="{StaticResource Primary500}"/>

    <SolidColorBrush
        x:Key="AccentColorBrush2"
        Color="#BD0F4F"/>

    <LinearGradientBrush x:Key="AccentColorsGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Offset="0.0" Color="{Binding Source={StaticResource AccentColorBrush1}, Path=Color}"/>
        <GradientStop Offset="1.0" Color="{Binding Source={StaticResource AccentColorBrush2}, Path=Color}"/>
    </LinearGradientBrush>
</ResourceDictionary>