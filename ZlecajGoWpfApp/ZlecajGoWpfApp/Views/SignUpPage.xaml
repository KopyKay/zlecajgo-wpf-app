<Page
    x:Class="ZlecajGoWpfApp.Views.SignUpPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="clr-namespace:ZlecajGoWpfApp.Helpers"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:ZlecajGoWpfApp.ViewModels"
    Title="{Binding Title}"
    d:DataContext="{d:DesignInstance Type=viewModel:SignUpViewModel,
                                     IsDesignTimeCreatable=True}"
    IsEnabled="{Binding IsNotBusy}"
    mc:Ignorable="d">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/AuthenticationStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height=".05*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height=".05*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height=".05*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height=".60*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width=".15*"/>
            <ColumnDefinition Width=".35*"/>
            <ColumnDefinition Width=".15*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="5"
            Content="{Binding Title}"
            Style="{StaticResource AuthenticationTitle}"/>
        <TextBox
            Grid.Row="1"
            Grid.Column="1"
            Grid.ColumnSpan="3"
            materialDesign:HintAssist.Hint="E-mail"
            materialDesign:HintAssist.IsFloating="True"
            FontSize="{StaticResource MediumFontSize}"
            Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>
        <PasswordBox
            Grid.Row="3"
            Grid.Column="1"
            Grid.ColumnSpan="3"
            helpers:PasswordBoxHelper.BindPassword="True"
            helpers:PasswordBoxHelper.BoundPassword="{Binding Password, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
            materialDesign:HintAssist.Hint="Hasło"
            materialDesign:HintAssist.IsFloating="True"
            FontSize="{StaticResource MediumFontSize}"/>
        <PasswordBox
            Grid.Row="5"
            Grid.Column="1"
            Grid.ColumnSpan="3"
            helpers:PasswordBoxHelper.BindPassword="True"
            helpers:PasswordBoxHelper.BoundPassword="{Binding ConfirmPassword, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
            materialDesign:HintAssist.Hint="Powtórz hasło"
            materialDesign:HintAssist.IsFloating="True"
            FontSize="{StaticResource MediumFontSize}"/>
        <StackPanel
            Grid.Row="7"
            Grid.Column="1"
            Grid.ColumnSpan="3"
            HorizontalAlignment="Left"
            Orientation="Vertical">
            <TextBlock
                FontSize="{StaticResource SmallFontSize}"
                Foreground="{Binding HasMinimumLength, Converter={StaticResource BooleanToColorConverter}}">
                <Span>• Minimum</Span>
                <Span FontWeight="Bold">6 znaków</Span>
            </TextBlock>
            <TextBlock
                FontSize="{StaticResource SmallFontSize}"
                Foreground="{Binding HasLowerCase, Converter={StaticResource BooleanToColorConverter}}">
                <Span>• Minimum</Span>
                <Span FontWeight="Bold">1 mała litera (a-z)</Span>
            </TextBlock>
            <TextBlock
                FontSize="{StaticResource SmallFontSize}"
                Foreground="{Binding HasUpperCase, Converter={StaticResource BooleanToColorConverter}}">
                <Span>• Minimum</Span>
                <Span FontWeight="Bold">1 duża litera (A-Z)</Span>
            </TextBlock>
            <TextBlock
                FontSize="{StaticResource SmallFontSize}"
                Foreground="{Binding HasNumber, Converter={StaticResource BooleanToColorConverter}}">
                <Span>• Minimum</Span>
                <Span FontWeight="Bold">1 cyfra (0-9)</Span>
            </TextBlock>
            <TextBlock
                FontSize="{StaticResource SmallFontSize}"
                Foreground="{Binding HasSpecialCharacter, Converter={StaticResource BooleanToColorConverter}}">
                <Span>• Minimum</Span>
                <Span FontWeight="Bold">1 znak specjalny (&amp;-@/.)</Span>
            </TextBlock>
        </StackPanel>
        <Button
            Grid.Row="8"
            Grid.Column="2"
            Command="{Binding SignUpCommand}"
            Content="Zarejestruj się"
            FontSize="{StaticResource SmallFontSize}"
            IsDefault="True"
            Visibility="{Binding IsNotBusy, Converter={StaticResource BooleanToVisibilityConverter}}"/>
        <ProgressBar
            Grid.Row="8"
            Grid.Column="2"
            IsIndeterminate="True"
            Style="{StaticResource MaterialDesignCircularProgressBar}"
            Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}"/>
        <StackPanel
            Grid.Row="9"
            Grid.Column="1"
            Grid.ColumnSpan="3"
            Style="{StaticResource AuthenticationBottomStackPanel}">
            <Label
                Content="Masz już konto?"
                FontSize="{StaticResource SmallFontSize}"/>
            <Button
                Command="{Binding GoToLogInPageCommand}"
                Content="Zaloguj się"
                Style="{StaticResource AuthenticationBottomButton}"/>
        </StackPanel>
    </Grid>

</Page>
