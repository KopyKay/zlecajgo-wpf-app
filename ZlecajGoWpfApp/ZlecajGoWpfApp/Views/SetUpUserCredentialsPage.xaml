<Page
    x:Class="ZlecajGoWpfApp.Views.SetUpUserCredentialsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:ZlecajGoWpfApp.ViewModels"
    Title="{Binding Title}"
    d:DataContext="{d:DesignInstance Type=viewModel:SetUpUserCredentialsViewModel,
                                     IsDesignTimeCreatable=True}"
    IsEnabled="{Binding IsNotBusy}"
    mc:Ignorable="d">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/AuthenticationStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height=".05*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height=".05*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height=".05*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height=".05*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height=".25*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width=".15*"/>
            <ColumnDefinition Width=".35*"/>
            <ColumnDefinition Width=".15*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="5"
            Content="{Binding Title}"
            Style="{StaticResource AuthenticationTitle}"/>
        <TextBox
            Grid.Row="1"
            Grid.Column="1"
            Grid.ColumnSpan="3"
            materialDesign:HintAssist.Hint="Imię"
            materialDesign:HintAssist.IsFloating="True"
            FontSize="{StaticResource MediumFontSize}"
            MaxLength="40"
            Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}"/>
        <TextBox
            Grid.Row="3"
            Grid.Column="1"
            Grid.ColumnSpan="3"
            materialDesign:HintAssist.Hint="Nazwisko"
            materialDesign:HintAssist.IsFloating="True"
            FontSize="{StaticResource MediumFontSize}"
            MaxLength="60"
            Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}"/>
        <TextBox
            Grid.Row="5"
            Grid.Column="1"
            Grid.ColumnSpan="3"
            materialDesign:HintAssist.Hint="Nazwa użytkownika"
            materialDesign:HintAssist.IsFloating="True"
            FontSize="{StaticResource MediumFontSize}"
            MaxLength="30"
            Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged}"/>
        <DatePicker
            Grid.Row="7"
            Grid.Column="1"
            Grid.ColumnSpan="3"
            materialDesign:HintAssist.Hint="Data urodzenia"
            materialDesign:HintAssist.IsFloating="True"
            FontSize="{StaticResource MediumFontSize}"
            SelectedDate="{Binding BirthDate, UpdateSourceTrigger=PropertyChanged}"/>
        <TextBox
            Grid.Row="9"
            Grid.Column="1"
            Grid.ColumnSpan="3"
            materialDesign:HintAssist.Hint="Numer telefonu"
            materialDesign:HintAssist.IsFloating="True"
            FontSize="{StaticResource MediumFontSize}"
            MaxLength="9"
            Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}"/>
        <Button
            Grid.Row="10"
            Grid.Column="2"
            Command="{Binding UpdateUserCredentialsCommand}"
            Content="Potwierdź"
            FontSize="{StaticResource SmallFontSize}"
            IsDefault="True"
            Visibility="{Binding IsNotBusy, Converter={StaticResource BooleanToVisibilityConverter}}"/>
        <ProgressBar
            Grid.Row="10"
            Grid.Column="2"
            IsIndeterminate="True"
            Style="{StaticResource MaterialDesignCircularProgressBar}"
            Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}"/>
    </Grid>

</Page>
